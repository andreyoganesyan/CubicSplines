<UserControl x:Class="CubicSplines.SplineNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CubicSplines"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="15"
             Height="20" Width="20" MouseUp="UserControl_MouseUp" PreviewMouseDown="UserControl_MouseDown">
    <Grid>
        <Ellipse Fill="Blue" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" />
        <Ellipse Fill="Blue" HorizontalAlignment="Left" Height="16" VerticalAlignment="Top" Width="16" Stroke="White" StrokeThickness="3" Margin="2,2,0,0" />

    </Grid>
</UserControl>
